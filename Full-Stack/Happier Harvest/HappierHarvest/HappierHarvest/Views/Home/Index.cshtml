@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/corn-maze.png" alt="Corn Maze">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/petting-zoo.png" alt="Petting Zoo">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/hay-ride.png" alt="Hay Rides">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/pumpkins.png" alt="Pumpkins">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col description">
        <h2>Hello, gourdgeous</h2>
        <p>Snag your perfect pumpkin from our beautiful selection of pumpkins. Small, large, orange, white, green, yellow... you name it. Maybe if you're lucky, you'll also get a chance to see our prize winning 1,200 pound pumpkin, Bertha!</p>
        <p>@Html.ActionLink("Check out our selection »", "PumpkinPatch", "Home")</p>
    </div>

    <div class="col description">
        <h2>You're a-MAZE-ing!</h2>
        <p>
            Everyone loves a good brain-teaser, right? Come hike your way through our custom design corn maze where you will not only be able to test your land navigation skills but also your detective chops! This year we've teamed up with Farmer Joe to try to figure out why all of his chickens have been going missing. Want to learn more about how you can help Farmer Joe?
        </p>
        <p> @Html.ActionLink("Learn more about our Corn Maze mystery »", "CornMaze", "Home")</p>
    </div>

    <div class="col description">
        <h2>Here's Looking At Zoo</h2>
        <p>Get up close and personal with some of our farm babies. There is no animal too small or too large that loves to be hand-fed and seen by you! You can even reserve time with one of our farmers to learn more and interact longer with each animal.</p>
        <p> @Html.ActionLink("The critters are waiting for you! »", "PettingZoo", "Home")</p>
    </div>
</div>